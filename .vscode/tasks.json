    "version": "0.1.0",
    "command": "sh",
    "args": ["-c"],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "echoCommand" : true,
    "tasks": [
        {
            "taskName"      : "build",
            "args"          : ["gulp"],
            "isBuildCommand": true,
            "isBackground"  : false,
            "problemMatcher": [
                "$tsc",
                "$gulp-tsc"
            ]
        }
    ]
}